<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PlayerListController">
   <children>
      <TabPane prefHeight="400.0" prefWidth="500.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab fx:id="PlayerListTab" text="Player List">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="250.0" prefWidth="382.0">
                     <children>
                        <ScrollPane layoutX="15.0" layoutY="33.0" prefHeight="275.0" prefWidth="470.0">
                          <content>
                            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="462.0" prefWidth="454.0">
                                 <children>
                                    <ListView fx:id="PlayerList" prefHeight="465.0" prefWidth="457.0" />
                                 </children>
                              </AnchorPane>
                          </content>
                        </ScrollPane>
                        <Label layoutX="16.0" layoutY="5.0" prefHeight="28.0" prefWidth="281.0" text="Choose The Player You Want To Chanllenge:">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Button fx:id="AcceptBtn1" layoutX="419.0" layoutY="320.0" mnemonicParsing="false" onAction="#ChallengePlayer" prefHeight="35.0" prefWidth="68.0" text="Accept">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                        <Button fx:id="RandomBtn" layoutX="16.0" layoutY="319.0" mnemonicParsing="false" onAction="#RandomPickPlayer" prefHeight="35.0" prefWidth="78.0" text="Random">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                        <Button fx:id="ResetListBtn1" layoutX="334.0" layoutY="320.0" mnemonicParsing="false" onAction="#ResetListPlayer" prefHeight="35.0" prefWidth="79.0" text="Reset List">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab fx:id="ChallengerTab" text="Challenger">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ScrollPane layoutX="15.0" layoutY="37.0" prefHeight="275.0" prefWidth="470.0">
                           <content>
                              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="462.0" prefWidth="454.0">
                                 <children>
                                    <ListView fx:id="ChallengerList" prefHeight="470.0" prefWidth="461.0" />
                                 </children>
                              </AnchorPane>
                           </content>
                        </ScrollPane>
                        <Label layoutX="16.0" layoutY="9.0" text="Choose Your Fighter:">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Button fx:id="AcceptBtn2" layoutX="418.0" layoutY="321.0" mnemonicParsing="false" onAction="#ConfirmChallenge" prefHeight="35.0" prefWidth="68.0" text="Accept">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                        <Button fx:id="ResetListBtn2" layoutX="332.0" layoutY="321.0" mnemonicParsing="false" onAction="#ResetListChallenger" prefHeight="35.0" prefWidth="79.0" text="Reset List">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
