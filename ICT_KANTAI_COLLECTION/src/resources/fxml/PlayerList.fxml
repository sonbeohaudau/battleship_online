<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="463.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PlayerListController">
   <children>
      <MenuBar prefHeight="28.0" prefWidth="500.0">
         <menus>
            <Menu text="Option">
               <items>
                  <MenuItem fx:id="backToMenuItem" onAction="#handleBtnMenu" text="Back to menu" />
                  <MenuItem fx:id="exitMenuItem" onAction="#handleBtnMenu" text="Exit" />
               </items>
            </Menu>
            <Menu text="Settings">
               <items>
                  <CheckMenuItem fx:id="bgmCheckMenu" onAction="#handleBtnMenu" selected="true" text="Enable BGM" />
                  <CheckMenuItem fx:id="seCheckMenu" onAction="#handleBtnMenu" selected="true" text="Enable SE" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <Label fx:id="playerName" layoutX="81.0" layoutY="33.0" prefHeight="27.0" prefWidth="406.0">
         <font>
            <Font name="System Bold" size="18.0" />
         </font></Label>
      <TabPane layoutY="67.0" prefHeight="396.0" prefWidth="500.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab fx:id="PlayerListTab" text="Player List">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="250.0" prefWidth="382.0">
                     <children>
                        <ScrollPane layoutX="15.0" layoutY="33.0" prefHeight="275.0" prefWidth="470.0">
                          <content>
                            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="462.0" prefWidth="454.0">
                                 <children>
                                    <ListView fx:id="PlayerList" prefHeight="465.0" prefWidth="457.0" />
                                 </children>
                              </AnchorPane>
                          </content>
                        </ScrollPane>
                        <Label layoutX="16.0" layoutY="5.0" prefHeight="28.0" prefWidth="281.0" text="Choose The Player You Want To Chanllenge:">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Button fx:id="ChallengeBtn" layoutX="405.0" layoutY="320.0" mnemonicParsing="false" onAction="#ChallengePlayer" prefHeight="35.0" prefWidth="82.0" text="Challenge">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                        <Button fx:id="RandomBtn" layoutX="16.0" layoutY="319.0" mnemonicParsing="false" onAction="#RandomPickPlayer" prefHeight="35.0" prefWidth="78.0" text="Random">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                        <Button fx:id="ResetListBtn1" layoutX="319.0" layoutY="320.0" mnemonicParsing="false" onAction="#ResetListPlayer" prefHeight="35.0" prefWidth="79.0" text="Reset List">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab fx:id="ChallengerTab" text="Challenger">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ScrollPane layoutX="15.0" layoutY="37.0" prefHeight="275.0" prefWidth="470.0">
                           <content>
                              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="462.0" prefWidth="454.0">
                                 <children>
                                    <ListView fx:id="ChallengerList" prefHeight="470.0" prefWidth="461.0" />
                                 </children>
                              </AnchorPane>
                           </content>
                        </ScrollPane>
                        <Label layoutX="16.0" layoutY="9.0" prefHeight="20.0" prefWidth="384.0" text="Choose The Player You Want To Accept Challenge:">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Button fx:id="AcceptBtn" layoutX="409.0" layoutY="321.0" mnemonicParsing="false" onAction="#AcceptChallenge" prefHeight="35.0" prefWidth="77.0" text="Accept">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                        <Button fx:id="ResetListBtn2" layoutX="324.0" layoutY="321.0" mnemonicParsing="false" onAction="#ResetListChallenger" prefHeight="35.0" prefWidth="79.0" text="Reset List">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                        <Button fx:id="DeclineBtn" layoutX="15.0" layoutY="321.0" mnemonicParsing="false" prefHeight="36.0" prefWidth="76.0" text="Decline">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
      <Label layoutX="7.0" layoutY="38.0" text="Player Name:" />
   </children>
</AnchorPane>
