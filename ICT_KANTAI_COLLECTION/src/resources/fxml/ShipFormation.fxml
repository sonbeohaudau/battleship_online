<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="shipFormationPane" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ShipFormationController">
	<top>
		<MenuBar BorderPane.alignment="CENTER">
			<menus>
				<Menu text="Help">
					<items>
						<MenuItem fx:id="backToMenuItem" onAction="#handleBtnMenu" text="Back to menu" />
						<MenuItem fx:id="exitMenuItem" onAction="#handleBtnMenu" text="Exit" />
					</items>
				</Menu>
				<Menu text="Settings">
					<items>
						<CheckMenuItem fx:id="bgmCheckMenu" onAction="#handleBtnMenu" selected="true" text="Enable BGM" />
						<CheckMenuItem fx:id="seCheckMenu" onAction="#handleBtnMenu" selected="true" text="Enable SE" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
	<center>
		<VBox>
   <children>
            <HBox>
               <children>
                  <VBox>
                     <children>
               			<Label fx:id="playerNameLabel1" alignment="CENTER" contentDisplay="CENTER" text="Player 1" textAlignment="CENTER">
               				<font>
               					<Font name="System Bold" size="30.0" />
               				</font>
               			</Label>
                     </children>
                  </VBox>
                  <Separator orientation="VERTICAL" prefHeight="0.0" prefWidth="0.0" />
                  <VBox>
                     <children>
                        <Label text="VS" textAlignment="CENTER">
                           <font>
                              <Font name="System Bold" size="30.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <Separator orientation="VERTICAL" prefHeight="44.0" prefWidth="6.0" />
                  <VBox>
                     <children>
                        <Label fx:id="playerNameLabel2" alignment="CENTER" contentDisplay="CENTER" text="Player 2" textAlignment="CENTER">
                           <font>
                              <Font name="System Bold" size="30.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
               </children>
            </HBox>
   			<HBox alignment="CENTER">
   				<children>
   					<VBox fx:id="ShipArmySelectionBox">
   						<children>
   							<Label fx:id="shipArmyLabel" alignment="CENTER" contentDisplay="CENTER" styleClass="header" text="Ship Army">
   								<font>
   									<Font name="System Bold" size="13.0" />
   								</font>
   								<VBox.margin>
   									<Insets bottom="10.0" />
   								</VBox.margin>
   							</Label>
   						</children>
   					</VBox>
   					<Separator orientation="VERTICAL">
   						<HBox.margin>
   							<Insets left="15.0" right="15.0" />
   						</HBox.margin>
   					</Separator>
   					<VBox fx:id="battleField" maxHeight="200.0" styleClass="battlefield">
   						<children>
   							<Label alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" styleClass="header" text="FORMATION" textAlignment="CENTER">
   								<font>
   									<Font name="System Bold" size="13.0" />
   								</font>
   								<VBox.margin>
   									<Insets bottom="5.0" />
   								</VBox.margin>
   							</Label>
   						</children>
   					</VBox>
   				</children>
   				<BorderPane.margin>
   					<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   				</BorderPane.margin>
   			</HBox>
   </children>
		</VBox>

	</center>

	<bottom>
		<HBox spacing="10.0" styleClass="footer" BorderPane.alignment="CENTER">
			<children>
				<VBox alignment="CENTER">
					<children>
						<HBox />
					</children>
				</VBox>
				<VBox alignment="CENTER">
					<children>
						<HBox alignment="CENTER">
							<children>
								<Label text="Ship left: " />
								<Label fx:id="numOfShipLeftLabel" text="0" />
							</children>
						</HBox>
					</children>
				</VBox>
				<Region HBox.hgrow="ALWAYS" />
				<HBox alignment="CENTER" spacing="5.0">
					<children>
						<Button fx:id="rotShipButton" onAction="#handleBtnMenu" text="Rotate Ship" />
						<Button fx:id="randPlacementBtn" onAction="#handleBtnMenu" prefHeight="31.0" prefWidth="158.0" text="Random Placement" />
						<Button fx:id="confirmBtn" disable="true" mnemonicParsing="false" onAction="#handleBtnMenu" text="Confirm" />
					</children>
				</HBox>
			</children>
			<BorderPane.margin>
				<Insets bottom="10.0" left="10.0" right="10.0" top="50.0" />
			</BorderPane.margin>
		</HBox>
	</bottom>
</BorderPane>
